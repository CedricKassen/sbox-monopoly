                <div id="lightBlue1-disabled" class="ownership-dot-disabled"></div>
            </div>
            <div id="lightBlue2" class="ownership-dot lightBlue">
                <div id="lightBlue2-disabled" class="ownership-dot-disabled"></div>
            </div>
            <div id="lightBlue3" class="ownership-dot lightBlue">
                <div id="lightBlue3-disabled" class="ownership-dot-disabled"></div>
            </div>
        </div>
        <div class="ownership-dot-column">
            <div id="pink1" class="ownership-dot pink">
                <div id="pink1-disabled" class="ownership-dot-disabled"></div>
            </div>
            <div id="pink2" class="ownership-dot pink">
                <div id="pink2-disabled" class="ownership-dot-disabled"></div> 
            </div>
            <div id="pink3" class="ownership-dot pink">
                <div id="pink3-disabled" class="ownership-dot-disabled"></div> 
            </div>
        </div>
        <div class="ownership-dot-column">
            <div id="orange1" class="ownership-dot orange">
