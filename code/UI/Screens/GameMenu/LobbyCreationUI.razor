@namespace Monopoly.UI.Screens.GameMenu
@inherits Sandbox.UI.Panel
@using System
@implements Sandbox.UI.INavigatorPage

<root class="menu">
	<h1 class="title"> MY_POOL_NO </h1>
	<button onclick="@PressCreate">Erstellen</button>

	<div class="hub-buttons">
		<a href="/">
			<button class="back icon">
				keyboard_return
			</button>
		</a>
	</div>

	<div></div>
</root>

@code
{
	/// <summary>
	///     the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
	/// </summary>
	protected override int BuildHash() {
		return HashCode.Combine(1);
	}

	void PressCreate() {
		Game.ActiveScene.LoadFromFile("scenes/board.scene");
	}
}
