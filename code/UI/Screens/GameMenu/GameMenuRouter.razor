@using EnumExtensions.Settings
@inherits Sandbox.UI.NavHostPanel
@namespace Monopoly.UI.Screens.GameMenu

<root class="menu">
	<div class="navigator-canvas" slot="navigator-canvas"/>
</root>

@code
{
	public GameMenuRouter() {
		UserSettingsSystem.Load();

		DefaultUrl = "/";
		AddDestination("/", typeof(MainMenuUI));
		AddDestination("/hub", typeof(LobbyHubUI));
		AddDestination("/create", typeof(LobbyCreationUI));
		AddDestination("/settings", typeof(SettingsUI));
		AddDestination("/lobby-settings", typeof(GameSettingsUI));
	}
}
